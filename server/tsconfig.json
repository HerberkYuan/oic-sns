{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es5", "es6"],
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
